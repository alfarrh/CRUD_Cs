<Window x:Class="Crud_Cs.src.view.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud_Cs.src.view"
        mc:Ignorable="d"
        Title="Alert" Height="200" Width="300"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <StackPanel>
            <TextBlock FontSize="12">ERROR:</TextBlock>
            <TextBlock Margin="0 10" FontSize="12" Text="{Binding Message}" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
